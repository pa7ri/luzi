<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Widget.Luzi.AppWidget.Container"
    android:layout_width="300dp"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:layout_height="wrap_content"
    android:theme="@style/Theme.Luzi.AppWidgetContainer">

    <TextView
        android:id="@+id/tvLoading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/margin_tiny"
        android:gravity="center"
        android:text="@string/loading_data_title"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tvLoadingDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:text="@string/loading_data_description"
        android:textSize="12sp" />

</LinearLayout>