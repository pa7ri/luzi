<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.rewards.RewardsFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        app:toolbarId="@+id/toolbar">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:titleEnabled="false">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/tvLevel"
                    style="@style/TextAppearance.HeaderText.Rewards.Tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_margin="@dimen/margin_large"
                    android:paddingHorizontal="@dimen/margin_small"
                    android:paddingVertical="@dimen/margin_tiny"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="Level 0" />

                <TextView
                    android:id="@+id/tvPoints"
                    style="@style/TextAppearance.MaterialComponents.Headline4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="47"
                    app:layout_constraintBottom_toBottomOf="@+id/pbPoints"
                    app:layout_constraintEnd_toEndOf="@+id/pbPoints"
                    app:layout_constraintStart_toStartOf="@+id/pbPoints"
                    app:layout_constraintTop_toTopOf="@+id/pbPoints"
                    app:layout_constraintVertical_bias="0.4" />

                <TextView
                    android:id="@+id/tvPointsDescription"
                    style="@style/TextAppearance.MaterialComponents.Caption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-5dp"
                    android:text="@string/dialog_points"
                    app:layout_constraintEnd_toEndOf="@+id/tvPoints"
                    app:layout_constraintStart_toStartOf="@+id/tvPoints"
                    app:layout_constraintTop_toBottomOf="@+id/tvPoints" />

                <com.google.android.material.progressindicator.CircularProgressIndicator
                    android:id="@+id/pbPoints"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/margin_xxxlarge"
                    android:layout_marginTop="@dimen/margin_regular"
                    android:layout_marginBottom="@dimen/margin_large"
                    android:max="100"
                    android:progress="65"
                    app:indicatorColor="?attr/colorSecondary"
                    app:indicatorSize="@dimen/circular_progress_height"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvLevel"
                    app:showAnimationBehavior="outward"
                    app:trackColor="?attr/colorTertiary"
                    app:trackThickness="@dimen/margin_small" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_margin="@dimen/margin_small"
                    android:background="@drawable/bg_round_white"
                    android:foreground="@drawable/ic_info"
                    android:foregroundTint="?attr/colorSecondary"
                    app:layout_constraintEnd_toEndOf="@+id/pbPoints"
                    app:layout_constraintTop_toTopOf="@+id/pbPoints" />

                <TextView
                    android:id="@+id/tvProgressSavedAmount"
                    style="@style/TextAppearance.HeaderText.Price.Value"
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:text="10.6"
                    android:gravity="center"
                    android:autoSizeTextType="uniform"
                    app:layout_constraintBottom_toBottomOf="@+id/pbSavedMoney"
                    app:layout_constraintEnd_toEndOf="@+id/pbSavedMoney"
                    app:layout_constraintHorizontal_bias="0.45"
                    app:layout_constraintStart_toStartOf="@+id/pbSavedMoney"
                    app:layout_constraintTop_toTopOf="@+id/pbPoints"
                    app:layout_constraintVertical_bias="0.42" />

                <TextView
                    android:id="@+id/tvProgressSavedAmountCurrency"
                    style="@style/TextAppearance.HeaderText.Rewards.Percentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/margin_tiny"
                    android:text="â‚¬"
                    app:layout_constraintBottom_toBottomOf="@+id/tvProgressSavedAmount"
                    app:layout_constraintStart_toEndOf="@+id/tvProgressSavedAmount"
                    app:layout_constraintTop_toTopOf="@+id/tvProgressSavedAmount"
                    app:layout_constraintVertical_bias="0.7" />

                <TextView
                    android:id="@+id/tvProgressSavedAmountDescription"
                    style="@style/TextAppearance.MaterialComponents.Caption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-5dp"
                    android:text="@string/dialog_money_description"
                    app:layout_constraintEnd_toEndOf="@+id/tvProgressSavedAmountCurrency"
                    app:layout_constraintStart_toStartOf="@+id/tvProgressSavedAmount"
                    app:layout_constraintTop_toBottomOf="@+id/tvProgressSavedAmount" />

                <com.google.android.material.progressindicator.CircularProgressIndicator
                    android:id="@+id/pbSavedMoney"
                    android:layout_width="400dp"
                    android:layout_height="400dp"
                    android:layout_marginHorizontal="@dimen/margin_xxxlarge"
                    android:max="100"
                    android:progress="100"
                    app:indicatorColor="?attr/colorSecondary"
                    app:indicatorSize="@dimen/circular_progress_height"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/pbPoints"
                    app:showAnimationBehavior="outward"
                    app:trackColor="?attr/colorTertiary"
                    app:trackThickness="@dimen/margin_small" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_margin="@dimen/margin_small"
                    android:background="@drawable/bg_round_white"
                    android:foreground="@drawable/ic_info"
                    android:foregroundTint="?attr/colorSecondary"
                    app:layout_constraintEnd_toEndOf="@+id/pbSavedMoney"
                    app:layout_constraintTop_toTopOf="@+id/pbSavedMoney" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.appbar.CollapsingToolbarLayout>


        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tLRewards"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@color/orange_100_40"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            app:tabIndicatorColor="?attr/colorSecondary" />

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/vpRewards"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/margin_regular"
        android:src="@drawable/ic_add"
        app:fabCustomSize="@dimen/fab_width"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
        app:tint="@color/white" />


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabExpenseManual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="@dimen/margin_normal"
        android:layout_marginBottom="@dimen/margin_fab_first"
        android:src="@drawable/ic_edit_manual"
        android:visibility="invisible"
        app:fabCustomSize="@dimen/icon_xlarge_width"
        app:maxImageSize="@dimen/icon_width"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
        app:tint="@color/white" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabExpenseReceipt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="@dimen/margin_normal"
        android:layout_marginBottom="@dimen/margin_fab_second"
        android:src="@drawable/ic_receipt"
        android:visibility="invisible"
        app:fabCustomSize="@dimen/icon_xlarge_width"
        app:maxImageSize="@dimen/icon_width"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
        app:tint="@color/white" />

    <include
        android:id="@+id/ltLoading"
        layout="@layout/layout_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
