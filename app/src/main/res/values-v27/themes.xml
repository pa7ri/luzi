<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Luzi" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_700</item>
        <item name="colorPrimaryVariant">@color/purple_500</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange_600</item>
        <item name="colorSecondaryVariant">@color/orange_400</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Tertiary brand color. -->
        <item name="colorTertiary">@color/orange_100_40</item>
        <item name="colorOnTertiary">@color/orange_400</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>

        <item name="android:navigationBarColor">?attr/colorOnPrimary</item>
        <item name="android:windowLightNavigationBar">true</item>
    </style>
</resources>