<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextAppearance.HeaderText.Price.Value" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textSize">28sp</item>
        <item name="android:letterSpacing">0.002</item>
    </style>

    <style name="TextAppearance.HeaderText.Rewards.Percentage" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textSize">18sp</item>
        <item name="android:letterSpacing">0.001</item>
    </style>

    <style name="TextAppearance.HeaderText.Rewards.Tag" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">0.001</item>
        <item name="android:background">@drawable/bg_round</item>
        <item name="android:textColor">@color/orange_400</item>
        <item name="android:paddingStart">@dimen/margin_small</item>
        <item name="android:paddingEnd">@dimen/margin_small</item>
        <item name="android:paddingTop">@dimen/margin_tiny</item>
        <item name="android:paddingBottom">@dimen/margin_tiny</item>
    </style>

    <style name="TextAppearance.HeaderText.Price.Description" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textSize">10sp</item>
        <item name="android:letterSpacing">0.001</item>
    </style>

    <style name="TextAppearance.HeaderText.Price.Magnitude" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textSize">10sp</item>
        <item name="android:letterSpacing">0.001</item>
    </style>

    <style name="TextAppearance.Loading" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:letterSpacing">0.0001</item>
    </style>

    <style name="Widget.Luzi.AppWidget.Container" parent="android:Widget">
        <item name="android:id">@android:id/background</item>
        <item name="android:background">?android:attr/colorBackground</item>
    </style>

    <style name="Widget.Luzi.AppWidget.InnerView" parent="android:Widget">
        <item name="android:background">?android:attr/colorBackground</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>
</resources>